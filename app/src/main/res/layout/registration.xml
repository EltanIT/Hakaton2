<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/exit_button"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:onClick="BackToRegistrate"
         />
    <TextView
        android:id="@+id/HelloUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="25dp"
        android:paddingTop="130dp"
        android:text="Регистрация"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="38sp"
        android:fontFamily="@font/semibold"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Name"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HelloUserText"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="Фамилия"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Surname"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Name"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="Имя"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Email"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Surname"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="Отчество"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/NumberPhone"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="E-mail"
        android:textSize="16sp"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Password"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NumberPhone"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="Пароль"
        android:textSize="16sp"
        android:inputType="textPassword"

        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Pas"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:paddingLeft="15dp"
        android:background="@drawable/edittxt"
        android:fontFamily="@font/regular"
        android:hint="Подтвердите пароль"
        android:textSize="16sp"
        android:inputType="textPassword"
    />
    <TextView
        android:id="@+id/necessarily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colort"
        android:textSize="12sp"
        android:paddingStart="36dp"
        android:text="*-данные обязательны для заполения"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Pas"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/necessarily"
        android:background="@drawable/button_reception_dark"
        android:stateListAnimator="@null"
        android:onClick="Continue"

        />
</androidx.constraintlayout.widget.ConstraintLayout>