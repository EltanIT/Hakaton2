<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="15dp"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="14dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/exit_button"
                    android:onClick="Back"
                    />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right|center"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_shape"
                    android:scaleType="fitXY"
                    android:src="@drawable/profil_image" />
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/FIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:paddingTop="90dp"
        android:text="Фамилия Имя Отчество"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="@font/semibold"
        />
    <TextView
        android:id="@+id/WorkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FIO"
        android:layout_marginStart="40dp"
        android:paddingTop="10dp"
        android:text="Название работы"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:fontFamily="@font/semibold"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/printed_edition"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:text="Печатное издание"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/colorbuttonPrimary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40sp"
        app:layout_constraintTop_toBottomOf="@id/WorkName"
        android:background="@drawable/button_reception"
        android:stateListAnimator="@null"
        android:onClick="Continue"

        />
    <TextView
        android:id="@+id/AboutCreater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/printed_edition"
        android:layout_marginStart="40dp"
        android:paddingTop="20dp"
        android:text="Об авторе"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:fontFamily="@font/semibold"
        />
    <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AboutCreater"
        android:paddingLeft="35dp"
        android:paddingTop="20dp"
        android:text="Должность:"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="@font/semibold"
        />
    <TextView
        android:id="@+id/WorkPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_title"
        android:paddingLeft="35dp"
        android:paddingTop="8dp"
        android:text="Место работы:"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:fontFamily="@font/semibold"
        />
    <TextView
        android:id="@+id/annotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkPlace"
        android:paddingLeft="35dp"
        android:paddingTop="8dp"
        android:text="Аннотация"
        android:textColor="@color/colortext"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:fontFamily="@font/semibold"
        />
    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/annotation"
        android:layout_marginTop="5dp"
        >


        <TextView
            android:id="@+id/textviewanim"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkName"
        app:layout_constraintVertical_bias="0.65">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:text="@string/File"
            android:textColor="@color/black"
            android:textSize="23sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_file"
            android:layout_marginTop="13dp"
            android:textColor="@color/downloadText"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Continue"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Оценено"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/agate_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/WorkName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.77"
        android:background="@drawable/request_button_shape"
        android:stateListAnimator="@null"
        android:onClick="Continue"

        />
</androidx.constraintlayout.widget.ConstraintLayout>